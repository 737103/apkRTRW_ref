
{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "data.child('username').val() === 'user' || auth != null",
      ".indexOn": ["username"]
    },
    "reports": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["userId", "submissionDate"]
    },
    "announcements": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "config": {
       ".read": "auth != null",
       ".write": "!data.exists() || auth != null"
    }
  }
}
