
{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('config/admin_credentials/username').val() === 'admin'",
      ".indexOn": ["username"]
    },
    "reports": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["userId", "submissionDate"]
    },
    "announcements": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('config/admin_credentials/username').val() === 'admin'"
    },
    "config": {
       ".read": "auth != null && root.child('config/admin_credentials/username').val() === 'admin'",
       ".write": "auth != null && root.child('config/admin_credentials/username').val() === 'admin'"
    }
  }
}
