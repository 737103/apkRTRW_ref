
{
  "rules": {
    ".read": true,
    ".write": true,
    "users": {
      "$uid": {
        ".write": "auth != null && auth.uid == $uid"
      },
      ".indexOn": "username"
    },
    "reports": {
      ".indexOn": ["userId", "submissionDate"]
    },
    "announcements": {
      // No specific index for announcements needed based on current usage
    },
    "config": {
      // No specific index for config needed based on current usage
    }
  }
}
