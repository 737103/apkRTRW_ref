
{
  "rules": {
    "users": {
      ".read": "auth != null || !data.exists()",
      ".write": "auth != null || !data.exists()",
      ".indexOn": ["username", "userId"]
    },
    "reports": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["userId", "submissionDate"]
    },
    "announcements": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "config": {
       ".read": "auth != null || !data.exists()",
       ".write": "auth != null || !data.exists()"
    }
  }
}
