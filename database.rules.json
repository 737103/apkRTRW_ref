
{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "auth == null && !data.exists() || auth != null",
      ".indexOn": ["username", "userId"]
    },
    "reports": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["userId", "submissionDate"]
    },
    "announcements": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "config": {
      "admin_credentials": {
        ".read": true,
        ".write": "auth != null"
      }
    }
  }
}
