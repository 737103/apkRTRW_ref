
{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": true,
      "$uid": {
        ".write": "auth != null && auth.uid == $uid"
      },
      ".indexOn": "username"
    },
    "reports": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["userId", "submissionDate"]
    },
    "announcements": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "config": {
      ".read": "auth != null",
      ".write": true
    }
  }
}
